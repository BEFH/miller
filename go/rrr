#!/bin/bash

set -euo pipefail

echo; mlr dkvp put '$j = $i + $i' pprint s.dkvp 
echo; mlr dkvp put '$j = $i + $x' pprint s.dkvp 
echo; mlr dkvp put '$j = $y + $x' pprint s.dkvp 
echo; mlr dkvp put '$j = $y + $i' pprint s.dkvp 
echo; mlr dkvp put '$j = $y + $y' pprint s.dkvp 
echo; mlr dkvp put '$j = $i+$i' pprint s.dkvp 
echo; mlr dkvp put '$y=$x*1e6' pprint s.dkvp
echo; mlr dkvp put '$y=$x+1e6' pprint s.dkvp
echo; mlr dkvp put '$y=$x+1' pprint s.dkvp
echo; mlr dkvp put '$y=FILENAME' pprint s.dkvp
echo; mlr dkvp put '$y=FILENUM' pprint s.dkvp
echo; mlr dkvp put '$y=NF' pprint s.dkvp
echo; mlr dkvp put '$y=NR' pprint s.dkvp
echo; mlr dkvp put '$y=FNR' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$y=NR' pprint s.dkvp s.dkvp 
echo; mlr csv put '$y=FNR' pprint s.csv s.csv
echo; mlr dkvp put '$y=FNR+1' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$y=FNR+$i' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$y=FNR+3' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$y=FNR+3+$i' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$y=$i+$y' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$y=$i+$x' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$z=$x+$y' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$z=$x+$i' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$z=NR+$i' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$z=NR-$i' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$z=4-1' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$z=NR' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$z=$i' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$z=100*NR-$i' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$z=100*$i+$x' pprint s.dkvp s.dkvp 
echo; mlr dkvp put '$z=100*$i+$x' pprint s.dkvp 
echo; mlr dkvp put '$z=100*$i/$x' pprint s.dkvp 
echo; mlr dkvp put '$z=NR/$i' pprint s.dkvp 
echo; mlr dkvp put '$z=100/$i' pprint s.dkvp 
echo; mlr dkvp put '$z=100//$i' pprint s.dkvp 
echo; mlr dkvp put '$z=100//$x' pprint s.dkvp 
echo; mlr dkvp put '$z=100.0//$i' pprint s.dkvp 
echo; mlr dkvp put '$z=100.0 // $i' pprint s.dkvp 
echo; mlr dkvp put '$z=100.0 / $i' pprint s.dkvp 
echo; mlr dkvp put '$z=100.0 ' pprint s.dkvp 
echo; mlr dkvp put '$z=100 ' pprint s.dkvp 
echo; mlr dkvp put '$z=100.4 ' pprint s.dkvp 
echo; mlr dkvp put '$z=1.2 ' pprint s.dkvp 
echo; mlr dkvp put '$z=100.0 / $i ' pprint s.dkvp 
echo; mlr dkvp put '$z=100.0 // $i ' pprint s.dkvp 
