  *.c \
  cli/*.c \
  lib/*.c \
  containers/*.c \
  auxents/*.c \
  stream/*.c \
  input/*.c \
  dsl/*.c \
  mapping/*.c \
  output/*.c

# DSL
DSL_OBJS = \
  ./parsing/mlr_dsl_parse.o \
  ./parsing/mlr_dsl_lexer.o \
  ./parsing/mlr_dsl_wrapper.o

